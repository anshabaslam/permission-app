{
  "expo": {
    "name": "Permission Manager",
    "slug": "hai-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "description": "Secure permission management app for Android and iOS devices. Easily manage camera, location, photos, and SMS permissions with a clean, intuitive interface.",
    "privacy": "public",
    "splash": {
      "image": "./assets/splash-screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#F3F0FF"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to scan receipts",
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to track transactions",
        "NSPhotoLibraryUsageDescription": "This app needs access to photos to organize receipts"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F3F0FF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.permissionmanager.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_SMS",
        "android.permission.RECEIVE_SMS"
      ],
      "allowBackup": false,
      "usesCleartextTraffic": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "d7302e9b-d736-4261-b3bb-3f97b68eb48e"
      }
    }
  }
}
